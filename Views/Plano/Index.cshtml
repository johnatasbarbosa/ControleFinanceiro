@{
    ViewData["Title"] = "Home Page";
}

@section header{
    <div class="col-sm-6">
        <h1 class="m-0 text-dark">Planos</h1>
    </div><!-- /.col -->
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Planos</li>
        </ol>
    </div><!-- /.col -->
}

<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-body">
                <p>
                    <button type="button" data-acao="Incluir" class="btn btn-primary"><span class='fa fa-plus-circle'></span> Novo</button>
                </p>

                <div class="table-responsive">
                    <table id="grid-data" class="table table-bordered table-condensed table-hover table-striped">
                        <thead>
                            <tr>
                                <th data-column-id="quantidadeDias">Quantidade de dias</th>
                                <th data-column-id="valor">Valor</th>
                                <th data-column-id="commands" data-formatter="commands" data-sortable="false" data-width="15%">Ações</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div><!-- /.box-body -->
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/AbrirModalNovo.js"></script>
    <script src="~/js/Plano/ConfigurarControles.js"></script>

    <script type="text/javascript">
        var rotaListar = "@Url.Action("Listar")";
        var urlIncluir = "@Url.Action("Incluir")";
