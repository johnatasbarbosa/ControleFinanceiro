<div class="modal fade" id="dadosMes" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content" data-bind="with: mes">
            <div class="modal-header">
                <h3 class="modal-title" id="myModalLabel">
                    <span data-bind="text: nome"> / <span data-bind="text: ano"></span>
                </h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <div id="abreModal"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-bind="click: $root.pagar, visible: ativo() == true && pago() == false;">Pagar</button>
                <button type="button" class="btn btn-danger" data-bind="click: $root.desfazerPagamento, visible: ativo() == true && pago() == true">Desfazer Pagamento</button>
                <button type="button" class="btn btn-primary" data-bind="click: $root.ativar, visible: ativo() == false;">Ativar</button>
                <button type="button" class="btn btn-default" data-bind="click: $root.desativar, visible: ativo() == true;">Desativar</button>
                <input type="button" class="btn btn-default" data-dismiss="modal" value="Fechar">
            </div>
        </div>
    </div>
</div>
