@model ControleFinanceiro.Models.Ciclo

@using (Html.BeginForm(ViewContext.RouteData.Values["action"].ToString(), ViewContext.RouteData.Values["controller"].ToString(), FormMethod.Post, new { id = "formCrud" }))
{
    <div class="modal-header">
        <h3 class="modal-title" id="myModalLabel">Editar Aluno</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>

    @Html.AntiForgeryToken()

    <br />
    <div class="form">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Aluno.Id)

        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.Aluno.Nome, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Aluno.Nome, new { @class = "form-control", @maxlength = 100 })
                    @Html.ValidationMessageFor(model => model.Aluno.Nome, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Aluno.DataNascimento, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
                        <!-- <input type="text" class="form-control datetimepicker-input" data-target="#datetimepicker1"/> -->
                        @Html.TextBoxFor(model => model.Aluno.DataNascimento, new { @class = "form-control",  data_toggle="datetimepicker", data_target="#Aluno_DataNascimento" })
                        <div class="input-group-append" data-target="#Aluno_DataNascimento" data-toggle="datetimepicker">
                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.Aluno.DataNascimento, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Aluno.Telefone, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Aluno.Telefone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Aluno.Telefone, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.PlanoId, htmlAttributes: new { @class = "control-label" })    
                    <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
                    @Html.DropDownListFor(model => model.PlanoId, new SelectList(ViewBag.Planos, "Id", "QuantidadeDias"), new {@class = "form-control"})
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span id="valor"></span>
                            </div>
                        </div>
                    </div>                
                    @Html.ValidationMessageFor(model => model.PlanoId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.ValorPromocional, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.ValorPromocional, new { @class = "form-control", @type="number", min = 1, max = 31 })
                    @Html.ValidationMessageFor(model => model.ValorPromocional, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.Aluno.DiaPagamento, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Aluno.DiaPagamento, new { @class = "form-control", @type="number", min = 1, max = 31 })
                    @Html.ValidationMessageFor(model => model.Aluno.DiaPagamento, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.Aluno.Peso, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Aluno.Peso, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Aluno.Peso, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.Aluno.Braco, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Aluno.Braco, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Aluno.Braco, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.Aluno.Abs, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Aluno.Abs, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Aluno.Abs, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.Aluno.Gluteo, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Aluno.Gluteo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Aluno.Gluteo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.Aluno.Perna, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Aluno.Perna, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Aluno.Perna, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.Aluno.IMC, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Aluno.IMC, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Aluno.IMC, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <input type="button" class="btn btn-default" data-dismiss="modal" value="Fechar">
        <button type="button" id="btnSalvar" class="btn btn-primary">Salvar</button>
    </div>
}

<script src="~/js/ConfigurarControlesPost.js"></script>
<script type="text/javascript">
    var rota = "@Url.Action("Editar")";
    var msgErro = 'Error';

    var planos = JSON.parse('@Json.Serialize(@ViewBag.Planos)');
    $(document).ready(function () {
        $('#myModal').on('shown.bs.modal', function () {
            $('input:text:visible:first', this).focus();
        });

        $('#Aluno_DataNascimento').datetimepicker({
            viewMode: 'years',
            format: 'L'
        });

        $("#PlanoId").change(function(e){
            atualizarValorPlano($(this).val());
        })
    });
    function atualizarValorPlano(planoId){
        planos.forEach(function(plano){
            if(plano.id == planoId)
                $("#valor").text("R$ " + plano.valor);
        })
    }
    atualizarValorPlano($("#PlanoId").val());
</script>
