@model ControleFinanceiro.Models.Aluno


@using (Html.BeginForm(ViewContext.RouteData.Values["action"].ToString(), ViewContext.RouteData.Values["controller"].ToString(), FormMethod.Post, new { id = "formCrud" }))
{
    <div class="modal-header">
        <h3 class="modal-title" id="myModalLabel">@Model.Nome</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>

    @Html.AntiForgeryToken()

    <br />
    <dl class="row">
        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.DiaPagamento)
        </dt>

        <dd class="col-sm-7">
            @Html.DisplayFor(model => model.DiaPagamento)
        </dd>

        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>

        <dd class="col-sm-7">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>

        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>

        <dd class="col-sm-7">
            @Html.DisplayFor(model => model.Telefone)
        </dd>

        <dt class="col-sm-5">
            @Html.DisplayName("Plano")
        </dt>

        <dd class="col-sm-7">
            @if(Model.ValorPromocional.HasValue){
                <span>
                    @Html.DisplayFor(model => model.Plano.QuantidadeDias) dias - R$ @Html.DisplayFor(model => model.ValorPromocional);
                </span>
            }
            else{
                <span>
                    @Html.DisplayFor(model => model.Plano.QuantidadeDias) dias - R$ @Html.DisplayFor(model => model.Plano.Valor);
                </span>
            }
        </dd>

        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.Peso)
        </dt>

        <dd class="col-sm-7">
            @Html.DisplayFor(model => model.Peso)
        </dd>

        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.Braco)
        </dt>

        <dd class="col-sm-7">
            @Html.DisplayFor(model => model.Braco)
        </dd>

        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.Abs)
        </dt>

        <dd class="col-sm-7">
            @Html.DisplayFor(model => model.Abs)
        </dd>

        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.Gluteo)
        </dt>

        <dd class="col-sm-7">
            @Html.DisplayFor(model => model.Gluteo)
        </dd>

        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.Perna)
        </dt>

        <dd class="col-sm-7">
            @Html.DisplayFor(model => model.Perna)
        </dd>

        <dt class="col-sm-5">
            @Html.DisplayNameFor(model => model.IMC)
        </dt>

        <dd class="col-sm-7">
            @Html.DisplayFor(model => model.IMC)
        </dd>
    </dl>

    <br />

    <div class="modal-footer">
        <input type="button" class="btn btn-default" data-dismiss="modal" value="Fechar">
    </div>
}